{% extends 'base.jinja2' %}
{% block contenu %}
    <h1 class="pt-4 mb-3 text-center">Toutes les versions du terme : {{ versions[0].titre }}</h1>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Terme</th>
                    <th>Auteur</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for version in versions %}
                    <tr>
                        <td>{{ version.titre }}</td>
                        <td>{{ version.auteur }}</td>
                        <td>{{ version.date }}</td>
                        <td>
                            <a href="{{ url_for('consulter_ancienne', idVersion=version.id) }}" class="btn btn-primary">Consulter <i class="bi bi-box-arrow-up-right"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}