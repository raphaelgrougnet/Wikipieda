{% extends 'base.jinja2' %}
{% block contenu %}
    <h1 class="pt-4 mb-3 text-center">{{ details.titre.upper() }}</h1>
    <div class="d-flex flex-column align-items-center">
        <div class="w-50 d-flex justify-content-center">
            <img src="{{ src }}" class="shadow mb-2 rounded-2 w-100" alt="placeholder">
        </div>
        <div class="card mb-3 shadow" style="max-width: 50rem">
            <div class="g-0">
                <div class="">
                    <div class="card-body ">
                        <p class="card-text">{{ details.contenu }}</p>
                        <div class="d-flex justify-content-between gap-3">
                            <p class="card-text m-0 pt-2"><span class="text-muted">{{ details.auteur }}</span> | <small class="text-muted">{{ date }}</small></p>
                            <div class="d-flex gap-2">
                                <form action="/old" class="" method="get">
                                    <input type="hidden" name="idTerme" value="{{ details.id }}"/>
                                    <input class="btn btn-secondary" type="submit" value="Anciennes versions"/>
                                </form>
                                <form action="/modifier" class="" method="post">
                                    <input type="hidden" name="titreTerme" value="{{ details.titre }}"/>
                                    <input type="hidden" name="contenuTerme" value="{{ details.contenu }}"/>
                                    <input type="hidden" name="idTerme" value="{{ details.id }}"/>
                                    <input class="btn btn-secondary" type="submit" value="Modifier"/>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}